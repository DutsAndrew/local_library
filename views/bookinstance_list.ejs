<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta lang="en">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" initial-scale="1">
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <%- include('layout') -%>
    <h1><%= title %></h1>
    <ul>
      <% if (bookinstance_list) { %>
        <% bookinstance_list.forEach((value) => { %>
          <li>
            <a href="<%= value.url %>">
              <%= value.book.title %> : <%= value.imprint %>
            </a>
            <% if (value.status === 'Available') { %>
              <span class="text-success">
                <%= value.status %>
              </span>
            <% } else if (value.status === 'Maintenance') { %>
              <span class="text-danger">
                <%= value.status %>
              </span>
            <% } else { %>
              <span class="text-warning">
                <%= value.status %>
              </span>
            <% } %>
            <% if (value.status !== 'Available') { %>
              <span>
                (Due: <%= value.due_back_formatted %> )
              </span>
            <% } %>
          </li>
        <% }); %>
      <% } else { %>
        <li>
          There are no book copies in this library.
        </li>
      <% } %>
    </ul>
  </body>
</html>