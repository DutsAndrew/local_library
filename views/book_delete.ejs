<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta lang="en">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" initial-scale="1">
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <%- include('layout') -%>

    <h1 id="title"> 
      <%= title %>
    </h1>

    <% if (typeof(book_instances) !== 'undefined' && book_instances.length > 0) { %>
      <p>
        <strong>
          Remove all book instances of "<%= book.title %>" before attempting to delete this book.
        </strong>
      </p>

      <div style="margin-left: 20px; margin-top: 20px;">
        <h4>
          Book instances of "<%= book.title %>":
        </h4>
        <dl>
          <% book_instances.forEach((book) => { %>
            <dt>
              <a href="<%= book.url %>">
                <%= book._id %>
              </a>
            </dt>
          <% }); %>
        </dl>
      </div>
    <% } else { %>
      <p>
        Do you really want to delete this Book?
      </p>

      <form method="POST" action="">
        <div class="form-group">
          <input 
            id="bookid"
            class="form-control"
            type="hidden"
            name="bookid"
            required
            value="<%= book._id %>"
          >
        </div>
        <button class="btn, btn-primary" type="submit">
          Delete
        </button>
      </form>
    <% }; %>

  </body>
</html>