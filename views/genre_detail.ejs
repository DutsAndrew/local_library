<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta lang="en">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" initial-scale="1">
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <%- include('layout') -%>
    <h1>Genre: <%= genre.name %></h1>
    <div style="margin-left: 20px; margin-top: 20px;">
      <h4>
        Books
      </h4>
      <dl>
        <% if (genre_books) { %>
          <% genre_books.forEach((book) => { %>
            <dt>
              <a href="<%= book.url %>">
                <%= book.title %>
              </a>
            </dt>
            <dd>
              <%= book.summary %>
            </dd>
          <% }); %>
        <% } else { %>
          <p>
            This genre has no books.
          </p>
        <% } %>
      </dl>
    </div>

    <hr>
    <p>
      <a href="<%= genre.url + '/delete' %>">
        Delete Genre
      </a>
    </p>
  </body>
</html>